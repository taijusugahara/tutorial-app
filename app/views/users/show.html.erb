<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
   <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <%# これは10章でやったやつと一緒 
        _microposts.html.erbに行って@micropostsある分だけそれぞれ
        取り出してる%>
      </ol>
      <%= will_paginate @microposts %>
      <%# ここはちょっと違う。
      micropostのページじゃないから@micropostsが必要 %>
    <% end %>
  </div>
</div>